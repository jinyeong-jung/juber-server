{
  "name": "juber-server",
  "version": "1.0.0",
  "description": "Server for the (J)Uber clone project made with GraphQL, Typescript, NodeJS.",
  "main": "index.js",
  "repository": "https://github.com/jinyeong-jung/juber-server.git",
  "author": "Jinyeong Jung <jinyeong32@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.4",
    "@types/helmet": "^0.0.42",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mailgun-js": "^0.16.3",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.18",
    "@types/twilio": "^0.0.10"
  },
  "scripts": {
    "predev": "yarn run types",
    "dev": "cd src && nodemon --exec ts-node index.ts -e ts,graphql",
    "pretypes": "gql-merge --out-file ./src/schema.graphql ./src/api/**/*.graphql",
    "types": "graphql-to-typescript ./src/schema.graphql ./src/types/graph.d.ts",
    "prebuild": "del /s /q dist",
    "build": "tsc",
    "postbuild": "yarn copy src/api/**/*.graphql dist/api",
    "start": "cd dist && node ."
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "bcrypt": "^3.0.3",
    "class-validator": "^0.9.1",
    "copy": "^0.3.2",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "gql-merge": "^0.0.6",
    "graphql-to-typescript": "^0.1.2",
    "graphql-tools": "^4.0.3",
    "graphql-yoga": "^1.16.9",
    "helmet": "^3.15.0",
    "jsonwebtoken": "^8.4.0",
    "mailgun-js": "^0.22.0",
    "merge-graphql-schemas": "^1.5.8",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.9",
    "pg": "^7.7.1",
    "ts-node": "^7.0.1",
    "tslint-config-prettier": "^1.17.0",
    "twilio": "^3.27.1",
    "typeorm": "^0.2.9",
    "typescript": "^3.2.2"
  },
  "now": {
    "name": "nuber-server",
    "dotenv": ".env.production"
  }
}
